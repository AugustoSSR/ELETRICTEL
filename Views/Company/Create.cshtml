@model ELETRICTEL.Models.Company

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h1>Create</h1>
    <h4>Company</h4>
</div>
<hr />
<form asp-action="Create">
    <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-secondary">Informações</span>
                <span class="badge bg-info rounded-pill">ELETRICTEL</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h5 class="my-0">Preencha todos os dados</h5>
                    </div>
                    <span class="text-muted"></span>
                </li>
            </ul>
        </div>
        <div class="col-md-7 col-lg-8">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-6">
                    <label asp-for="Razao" class="control-label"></label>
                    <input asp-for="Razao" class="form-control" />
                    <span asp-validation-for="Razao" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Fantasia" class="control-label"></label>
                    <input asp-for="Fantasia" class="form-control" />
                    <span asp-validation-for="Fantasia" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>

                </div>
                <div class="col-sm-6">
                    <label asp-for="Street" class="control-label"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="StreetNumber" class="control-label"></label>
                    <input asp-for="StreetNumber" class="form-control" />
                    <span asp-validation-for="StreetNumber" class="text-danger"></span>
                </div>
                
                <div class="col-sm-6">
                    <label asp-for="StreetCep" class="control-label"></label>
                    <input asp-for="StreetCep" class="form-control" />
                    <span asp-validation-for="StreetCep" class="text-danger"></span>

                </div>
                <div class="col-sm-6">
                    <label asp-for="StreetState" class="control-label"></label>
                    <input asp-for="StreetState" class="form-control" />
                    <span asp-validation-for="StreetState" class="text-danger"></span>

                </div>
                <div class="col-sm-6">
                    <label asp-for="StreetCity" class="control-label"></label>
                    <input asp-for="StreetCity" class="form-control" />
                    <span asp-validation-for="StreetCity" class="text-danger"></span>

                </div>
                <div class="col-sm-6">

                    <label asp-for="UserClientsId" class="control-label"></label>
                    <select asp-for="UserClientsId" class="form-control" asp-items="ViewBag.UserClientsId"></select>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="btn-group" role="group">
        <a class="btn btn-danger" asp-action="Index">Back to List</a>
        <input type="submit" value="Create" class="btn btn-outline-success" />
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
