@model ELETRICTEL.Models.ViewModels.LoginViewModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<div class="text-center">

    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Parabéns! </strong> @TempData["MensagemSucesso"].
        </div>
    }
    <br />
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <h4 class="alert-heading">Atenção!</h4>
            <p class="mb-0"><strong>Oh snap!</strong> @TempData["MensagemErro"]. </p>
        </div>
    }

    <main class="form-signin w-150 m-auto">
        <form asp-controller="Login" asp-action="Entrar" method="post">
            <img class="mb-4" src="~/img/logo.png" alt="" width="100" height="100">
            <h1 class="h3 mb-3 fw-normal">Faça o seu login</h1>

            <div class="form-floating">
                <input type="text" asp-for="LoginUser" class="form-control" id="login" placeholder="Username">
                <label for="login">Username</label>
                @Html.ValidationMessageFor(x => x.LoginUser)
            </div>
            <div class="form-floating">
                <input type="password" asp-for="LoginPassword" class="form-control" id="senha" placeholder="Password">
                <label for="senha">Password</label>
                @Html.ValidationMessageFor(x => x.LoginPassword)
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Lembrar-se
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Logar</button>
            <br />
            <p class="mx-auto">
                Esqueceu sua senha ?
                <a asp-controller="Login" asp-action="RedefinirSenha" class="mb-3 fw-normal"> Esqueci</a>
            </p>
        </form>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="container">
            &copy; 2022 - B Solutions
        </div>
    </main>
</div>

