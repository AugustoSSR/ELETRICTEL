@model ELETRICTEL.Models.Projects

@{
    ViewData["Title"] = "Create";
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <h1 class="page-title">Project Forms</h1>
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Project</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->
<!--Row -->
<div class="row">
    <div class="col-md-12 col-xl-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Create Project</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Nome <span class="text-red">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="Location" class="form-label">Localidade <span class="text-red">*</span></label>
                                <input asp-for="Location" class="form-control" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TypesId" class="form-label">Tipo <span class="text-red">*</span></label>
                                <select asp-for="TypesId" class="form-control form-select select2" data-bs-placeholder="Select" asp-items="ViewBag.TypesId"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CompanyId" class="form-label">Empresa <span class="text-red">*</span></label>
                                <select asp-for="CompanyId" class="form-control form-select select2" data-bs-placeholder="Select" asp-items="ViewBag.CompanyId"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StatusId" class="form-label">Status <span class="text-red">*</span></label>
                                <select asp-for="StatusId" class="form-control form-select select2" data-bs-placeholder="Select" asp-items="ViewBag.StatusId"></select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="btn-group" role="group">
                        <a class="btn btn-danger" asp-action="Index">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End Row-->


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
