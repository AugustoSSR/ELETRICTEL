@model ELETRICTEL.Models.Types

@{
    ViewData["Title"] = "Create";
}
<!-- PAGE-HEADER -->
<div class="page-header">
    <h1 class="page-title">Types Forms</h1>
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Types</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->
<!--Row -->
<div class="row">
    <div class="col-md-12 col-xl-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Create Types</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-sm-6 col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label">Nome <span class="text-red">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="btn-group" role="group">
                        <a class="btn btn-danger" asp-action="Index">Back to List</a>
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End Row-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
