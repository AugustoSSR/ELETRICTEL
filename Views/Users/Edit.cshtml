@model UsersViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UsersViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UsersName" class="control-label"></label>
                <input asp-for="UsersName" class="form-control" />
                <span asp-validation-for="UsersName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersLogin" class="control-label"></label>
                <input asp-for="UsersLogin" class="form-control" />
                <span asp-validation-for="UsersLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersPassword" class="control-label"></label>
                <input asp-for="UsersPassword" class="form-control" />
                <span asp-validation-for="UsersPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersMail" class="control-label"></label>
                <input asp-for="UsersMail" class="form-control" />
                <span asp-validation-for="UsersMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsersPhone" class="control-label"></label>
                <input asp-for="UsersPhone" class="form-control" />
                <span asp-validation-for="UsersPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RolesId" class="control-label"></label>
                <select asp-for="RolesId" class="form-control" asp-items="ViewBag.RolesId"></select>
                <span asp-validation-for="RolesId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Actived" /> @Html.DisplayNameFor(model => model.Actived)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreateTime" class="control-label"></label>
                <input asp-for="CreateTime" class="form-control" />
                <span asp-validation-for="CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangeTime" class="control-label"></label>
                <input asp-for="ChangeTime" class="form-control" />
                <span asp-validation-for="ChangeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
